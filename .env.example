# Django Environment Variables Template
# Copy this file to .env and update the values

# Debug mode - Set to False in production
DEBUG=True

# Secret key for Django - Generate a new one for production
SECRET_KEY=django-insecure-your-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3

# Allowed hosts - comma separated list
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Email Configuration (for password reset, etc.)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Media and Static Files
MEDIA_URL=/media/
STATIC_URL=/static/

# Security Settings
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Time Zone
TIME_ZONE=Asia/Jakarta

# Language
LANGUAGE_CODE=id-id

# Social Auth Keys (optional)
GOOGLE_OAUTH2_KEY=your-google-oauth2-key
GOOGLE_OAUTH2_SECRET=your-google-oauth2-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880

# Cache Configuration (optional - Redis)
# CACHE_URL=redis://localhost:6379/1

# Logging Level
LOG_LEVEL=DEBUG
